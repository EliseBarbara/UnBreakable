            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.673"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="281,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="0"/>
        <Button x:Name="btnCrear" Content="Crear" HorizontalAlignment="Left" Margin="258,424,0,0" VerticalAlignment="Top" Width="73" Click="btnCrear_Click" FontWeight="Normal" RenderTransformOrigin="0.5,0.5" Height="28">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.157"/>
                    <TranslateTransform Y="0.069"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="374,425,0,0" VerticalAlignment="Top" Width="82" FontWeight="Normal" RenderTransformOrigin="0.5,0.5" Height="28" Click="btnModificar_Click">
