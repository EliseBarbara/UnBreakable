                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.157"/>
                    <TranslateTransform X="0.001" Y="0.433"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="button" Content="Cerrar" HorizontalAlignment="Left" Margin="822,466,0,0" VerticalAlignment="Top" Width="76" FontWeight="Normal" Height="28" Click="button_Click"/>
        <Label x:Name="label6" Content="Tipo Evento:" HorizontalAlignment="Left" Margin="136,287,0,0" VerticalAlignment="Top" Height="26" Width="82"/>
        <ComboBox x:Name="cboTipo" HorizontalAlignment="Left" Margin="243,287,0,0" VerticalAlignment="Top" Width="145" AutomationProperties.IsOffscreenBehavior="Onscreen" Height="26"/>
        <Label x:Name="label4" Content="Dirección:" HorizontalAlignment="Left" Margin="136,197,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
        <TextBox x:Name="txtDireccion" Controls:TextBoxHelper.Watermark ="Ingrese dirección" HorizontalAlignment="Left" Height="26" Margin="243,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" />
        <Label x:Name="label5_Copy" Content="N° Asistentes:" HorizontalAlignment="Left" Margin="134,241,0,0" VerticalAlignment="Top" Height="26" Width="88"/>
        <TextBox x:Name="txtNumeroAsistentes" HorizontalAlignment="Left" Height="26" Margin="243,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36"/>
        <Label x:Name="label7" Content="Observaciones:" HorizontalAlignment="Left" Margin="134,333,0,0" VerticalAlignment="Top" Height="26" Width="95"/>
        <TextBox x:Name="txtObservaciones" HorizontalAlignment="Left" Height="36" Margin="243,339,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>
        <Label x:Name="label9" Content="Buscar" HorizontalAlignment="Left" Margin="108,6,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="Black" Height="26" Width="56" FontSize="14"/>
        <Label x:Name="label5" Content="Contrato Vigente:" HorizontalAlignment="Left" Margin="769,3,0,0" VerticalAlignment="Top" Height="26" Width="118"/>
        <RadioButton x:Name="rbSi" Content="Sí" HorizontalAlignment="Left" Margin="884,10,0,0" VerticalAlignment="Top" IsChecked="True" Height="18" Width="34" GroupName="vigente"/>
        <RadioButton x:Name="rbNo" Content="No" HorizontalAlignment="Left" Margin="934,10,0,0" VerticalAlignment="Top" Height="18" Width="52" GroupName="vigente"/>
        <Button x:Name="btnCliente" Content="Buscar" HorizontalAlignment="Left" Margin="479,79,0,0" VerticalAlignment="Top" Width="75" FontWeight="Normal" Click="btnCliente_Click" Height="29"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="244,140,0,0" VerticalAlignment="Top" Width="310"/>
    </Grid>
</Controls:MetroWindow>
