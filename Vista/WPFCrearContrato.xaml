<Controls:MetroWindow x:Class="Vista.Crear_Contrato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behaviours="clr-namespace:MahApps.Metro.Behaviours;assembly=MahApps.Metro"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
                      
        xmlns:local="clr-namespace:Vista"
        mc:Ignorable="d"
        Title="OnBreak - Administrar Contrato" Height="583.835" Width="985.128" WindowStartupLocation="CenterScreen" FontWeight="Bold" WindowTitleBrush="Black" Icon="Imagenes/white_logo_dark_background.jpg">
    <Grid Margin="0,0,-8,-1" Background="#FF84D9E8" Height="798" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.133"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="430"/>
            <ColumnDefinition Width="189*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="332*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto" MinHeight="27"/>
            <RowDefinition Height="571*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Column="3" Fill="#CC119EDA" HorizontalAlignment="Left" Height="29" Margin="92,3,0,0" Stroke="#FFA0A0A0" VerticalAlignment="Top" Width="211"/>
        <Rectangle HorizontalAlignment="Left" Height="174" Margin="108,10,0,0" Stroke="#CC119EDA" VerticalAlignment="Top" Width="640" Grid.ColumnSpan="4" Fill="#FF84D9E8"/>
        <Label x:Name="label_Copy1" Content="Número:" HorizontalAlignment="Left" Height="36" Margin="142,26,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="txtNumero" Controls:TextBoxHelper.Watermark ="Ingrese Número Contrato" HorizontalAlignment="Left" Height="26" Margin="244,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="btnBuscarContrato" Content="Buscar" HorizontalAlignment="Left" Margin="49,26,0,0" VerticalAlignment="Top" Width="74" Height="28" FontWeight="Normal" Grid.Column="1" Click="btnBuscarContrato_Click_2" />
        <Button x:Name="btnListadoNum" Content="?" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top" Width="38" Height="26" Click="btnListadoNum_Click" Grid.Column="1"/>
        <Label x:Name="label_Copy2" Content="Nombre:" HorizontalAlignment="Left" Height="36" Margin="142,140,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="26" Margin="243,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" IsEnabled="False" Background="#FFD5D5D5" Grid.ColumnSpan="2"/>
        <Label x:Name="label_Copy4" Content="Rut Cliente:" HorizontalAlignment="Left" Height="36" Margin="142,83,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="txtBuscarCliente" Controls:TextBoxHelper.Watermark ="Ingrese Rut" HorizontalAlignment="Left" Height="26" Margin="244,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" />
        <Button x:Name="btnListadoCliente" Content="?" HorizontalAlignment="Left" Margin="428,81,0,0" VerticalAlignment="Top" Width="40" Height="27" RenderTransformOrigin="0.5,0.5" Click="btnListadoCliente_Click" Grid.ColumnSpan="2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.673"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="281,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="0" Grid.Row="1" Grid.RowSpan="2"/>
        <Button x:Name="btnCrear" Content="Crear" HorizontalAlignment="Left" Margin="258,197,0,0" VerticalAlignment="Top" Width="73" Click="btnCrear_Click" FontWeight="Normal" RenderTransformOrigin="0.5,0.5" Height="28" Grid.Row="3">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.157"/>
                    <TranslateTransform Y="0.069"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="374,198,0,0" VerticalAlignment="Top" Width="82" FontWeight="Normal" RenderTransformOrigin="0.5,0.5" Height="28" Click="btnModificar_Click" Grid.Row="3" Grid.ColumnSpan="2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.157"/>
                    <TranslateTransform X="-0.001" Y="-0.417"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnLimpiar" Content="Limpiar" HorizontalAlignment="Left" Margin="130,196,0,0" VerticalAlignment="Top" Width="75" FontWeight="Normal" Click="btnLimpiar_Click" RenderTransformOrigin="0.5,0.5" Height="30" Grid.Row="3">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.157"/>
                    <TranslateTransform X="0.001" Y="0.433"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="button" Content="Cerrar" HorizontalAlignment="Left" Margin="145,239,0,0" Grid.Row="3" VerticalAlignment="Top" Width="76" FontWeight="Normal" Grid.Column="3" Height="28" Click="button_Click"/>
        <Label x:Name="label6" Content="Tipo Evento:" HorizontalAlignment="Left" Margin="136,60,0,0" VerticalAlignment="Top" Height="26" Width="82" Grid.Row="3"/>
        <ComboBox x:Name="cboTipo" HorizontalAlignment="Left" Margin="243,60,0,0" VerticalAlignment="Top" Width="145" AutomationProperties.IsOffscreenBehavior="Onscreen" Height="26" Grid.Row="3"/>
        <Label x:Name="label4" Content="Dirección:" HorizontalAlignment="Left" Margin="136,0,0,0" VerticalAlignment="Top" Height="26" Width="69" Grid.Row="1" Grid.RowSpan="2"/>
        <TextBox x:Name="txtDireccion" Controls:TextBoxHelper.Watermark ="Ingrese dirección" HorizontalAlignment="Left" Height="26" Margin="243,1,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" Grid.ColumnSpan="2" Grid.Row="2" />
        <Label x:Name="label5_Copy" Content="N° Asistentes:" HorizontalAlignment="Left" Margin="134,14,0,0" VerticalAlignment="Top" Height="26" Width="88" Grid.Row="3"/>
        <TextBox x:Name="txtNumeroAsistentes" HorizontalAlignment="Left" Height="26" Margin="243,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" Grid.Row="3"/>
        <Label x:Name="label7" Content="Observaciones:" HorizontalAlignment="Left" Margin="134,106,0,0" Grid.Row="3" VerticalAlignment="Top" Height="26" Width="95"/>
        <TextBox x:Name="txtObservaciones" HorizontalAlignment="Left" Height="36" Margin="243,112,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>
        <Label x:Name="label9" Content="Buscar" HorizontalAlignment="Left" Margin="108,6,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="Black" Height="26" Width="56" FontSize="14"/>
        <Label x:Name="label5" Content="Contrato Vigente:" HorizontalAlignment="Left" Margin="92,3,0,0" VerticalAlignment="Top" Height="26" Width="118" Grid.Column="3"/>
        <RadioButton x:Name="rbSi" Content="Sí" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" IsChecked="True" Height="18" Width="34" GroupName="vigente" Grid.Column="3"/>
        <RadioButton x:Name="rbNo" Content="No" HorizontalAlignment="Left" Margin="257,10,0,0" VerticalAlignment="Top" Height="18" Width="52" GroupName="vigente" Grid.Column="3"/>
        <Button x:Name="btnCliente" Content="Buscar" Grid.Column="1" HorizontalAlignment="Left" Margin="49,79,0,0" VerticalAlignment="Top" Width="75" FontWeight="Normal" Click="btnCliente_Click" Height="29"/>
    </Grid>
</Controls:MetroWindow>
